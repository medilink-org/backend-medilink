{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "CommonJS",
    "target": "es2021",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "*": ["./node_modules/*", "./types/*"]
    }
  },
  "include": ["./src/*", "**/*.d.ts", "./package.json"]
}
